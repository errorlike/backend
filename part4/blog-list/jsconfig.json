{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES2021",
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "typeAcquisition": {
        "include": [
            "node",
            "express",
            "jest",
            "mongoose",
            "supertest"
        ]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}